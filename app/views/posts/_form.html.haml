= form_for @post, :html => { :class => "form-horizontal" } do |f|
  -if @post.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"

      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :title, :class => 'form-control'
  .form-group
    = f.label :intro, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :intro, :class => 'form-control redactor', :rows => 40, :cols => 50
  .form-group
    = f.label :full, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :full, :class => 'form-control redactor', :rows => 40, :cols => 50
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit :class => 'btn btn-primary'
