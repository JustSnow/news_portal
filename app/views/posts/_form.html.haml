= form_for @post, :html => { :class => 'form-horizontal posts-form' } do |f|
  -if @post.errors.any?
    .alert.alert-error
      %h3
        =pluralize(@post.errors.count, 'error') 
      %ul
        -@post.errors.full_messages.each do |e|
          %li 
            =e
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :category_id, 'Категория', {class: 'control-label'}
    .controls
      = f.select :category_id, options_for_select(Category.all.map{|c| [c.name, c.id]}, @post.category_id)
  .control-group
    = f.label :intro, :class => 'control-label'
    .controls
      = f.text_area :intro, :class => 'text_area redactor'
  .control-group
    = f.label :full, :class => 'control-label'
    .controls
      = f.text_area :full, :class => 'text_area redactor'
  .control-group
    = f.label :tag_list, "Tags (separated by commas)"
    .controls
      = f.text_field :tag_list
  .btn-toolbar
    .btn-group
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Preview', (@post.id.nil?)? preview_posts_path : preview_posts_path(pots_id: @post.id), class: 'preview_post btn btn-info'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'
