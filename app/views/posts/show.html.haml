.page-header
  = link_to posts_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_post_path(@post), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show post

%dl.dl-horizontal
  %dt Full:
  %dd= @post.full
  %dt Intro:
  %dd= @post.intro
  %dt Title:
  %dd= @post.title
