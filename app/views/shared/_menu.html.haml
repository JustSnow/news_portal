.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to '#', {class: 'btn btn-navbar', data: {toggle: 'collapse', target: '.nav-collapse'}} do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Новостной портал", root_path, class: 'brand'
      
      - if admin_user_signed_in?
        .nav-collapse
          %ul.nav.pull-right
            %li.dropdown.user-avatar
              .btn-group
                = link_to '#', {class: 'btn btn-info dropdown-toggle', data: {toggle: 'dropdown'}} do
                  = content_tag(:span, raw(content_tag(:i, '', class: 'icon-user') + current_admin_user.email))
                %ul.dropdown-menu
                  %li= link_to 'Dashboard', admin_dashboard_path
                  %li= link_to 'Все посты', admin_posts_path
                  %li= link_to 'Выйти', destroy_admin_user_session_path, method: :delete

      - if user_signed_in?
        .nav-collapse
          %ul.nav.pull-right
            %li.dropdown.user-avatar
              .btn-group
                = link_to '#', {class: 'btn btn-info dropdown-toggle', data: {toggle: 'dropdown'}} do
                  = content_tag(:span, raw(content_tag(:i, '', class: 'icon-user') + current_user.email))
                %ul.dropdown-menu
                  %li= link_to 'Создать пост', new_post_path
                  %li= link_to 'Ваши посты', posts_path
                  %li= link_to 'Выйти', destroy_user_session_path, method: :delete
      - else
        .nav-collapse.collapse
          %ul.nav.pull-right
            %li=link_to 'Вход', new_user_session_path
            %li=link_to 'Регистрация', new_user_registration_path
